<!-- start header -->
<header role="masthead" id="home-drop">
	<div id="masthead-container">
				
		<nav role="static">
	        <% if logged_in? %>
	          <li><%= link_to "Users", '#' %></li>
	          <li class="dropdown">
	            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	              Account <b class="caret"></b>
	            </a>
	            <ul class="dropdown-menu">
	              <li><%= link_to "Profile", current_user %></li>
	              <li><%= link_to "Settings", '#' %></li>
	              <li class="divider"></li>
	              <li>
	                <%= link_to "Log out", logout_path, method: "delete" %>
	              </li>
	            </ul>
	          </li>
	        <% else %>
	          <section id="login-text">
	          	<span class="menu-text">( Log-In )<span class="arrow-up"></span></span>
	          </section>
	        <% end %>
		</nav>
										
	</div>
</header>
<!-- /header -->

<!-- nav active -->
<nav role="active">
							
	<div id="menu-contain">
					
		<section id="login-register">
			<span style="margin-left: 30px;" class="button static-color">Register</span>
			<span style="border-left: none;" class="button active-color">Log-In</span>
		</section>

		<!-- login -->
	    <%= form_for :session, url: login_path, :html => {class: "login-register-form login"} do |f| %>

	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>

	      <%= f.label :password %>
	      <%= f.password_field :password, class: 'form-control' %>

	      <%= f.submit "Log in", class: "btn btn-primary" %>
	    <% end %>	

		<!-- register -->
	    <%= form_for User.new, :html => {class: "login-register-form register"} do |f| %>
	      
	      <%= f.label :name %>
	      <%= f.text_field :name %>

	      <%= f.label :email %>
	      <%= f.email_field :email %>

	      <%= f.label :password %>
	      <%= f.password_field :password %>

	      <%= f.label :password_confirmation, "Confirmation" %>
	      <%= f.password_field :password_confirmation %>

	      <%= f.submit "Create my account", :html => {class: "button-submit"} %>
	    <% end %>
																																			
	</div>
</nav>
<!-- /nav active -->