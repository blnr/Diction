			          <!-- nav static -->
			          <nav id="nav-guest">
			          	<span class="menu-text" ng-hide="signedIn()">( Log-In )<span class="arrow-up"></span></span>
			          </nav>
			          <!-- nav login -->
			          <nav id="nav-user">
							<li ng-show="signedIn()"><a href="#/">{{ user.username }}</a></li>
							<li ng-show="signedIn()"><a ng-click="logout()">Log Out</a></li>
			          </nav>   

					</nav>	
				</div>
			</header>
			<!-- /header -->

			<!-- render template -->
			<ui-view id="content">
			</ui-view>
			<!-- end render -->

			<!-- page overlay for login -->
			<span id="page-overlay"></span>	
